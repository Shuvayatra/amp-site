<!doctype html>
<html amp lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{title}}</title>
    <link rel="canonical" href="{{canonical_url}}" />
    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">
    <!-- Schema.org markup for Google+ -->
    <meta itemprop="name" content="{{title}}">
    <meta itemprop="description" content="{{excerpt}}">
    <meta itemprop="image" content="{{featured_image}}">

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="Shuvayatra">
    <meta name="twitter:title" content="{{title}}">
    <meta name="twitter:description" content="{{excerpt}}">
    <meta name="twitter:image" content="{{featured_image}}">
    <meta name="twitter:image:alt" content="{{title}}">

    <!-- Open Graph data -->
    <meta property="fb:app_id" content="552404564965262"/>
    <meta property="og:title" content="{{title}}" />
    {{#if is_article}}
    <meta property="og:type" content="article" />
    {{/if}}
    {{#if is_audio}}
    <meta property="og:type" content="music.radio_station" />
    <meta property="og:audio:secure_url" content="{{data.data.media_url}}" />
    <meta property="og:audio:type" content="audio/mpeg" />
    {{/if}}
    {{#if is_video}}
    <meta property="og:type" content="video.other" />
    <meta property="og:video:secure_url" content="{{data.data.media_url}}" />
    {{/if}}
    
    <meta property="og:image" content="{{featured_image}}" />
    <meta property="og:url" content="{{amp_url}}" />
    <meta property="og:description" content="{{excerpt}}" />
    <meta property="og:site_name" content="Shuvayatra" />
    <meta property="article:published_time" content="{{published_iso}}" />
    <meta property="article:modified_time" content="{{modified_iso}}" />

    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "{{schemaType}}",
        "headline": "{{title}}",
        "datePublished": "{{published}}",
      }
    </script>
    <style amp-boilerplate>body{-webkit-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-moz-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-ms-animation:-amp-start 8s steps(1,end) 0s 1 normal both;animation:-amp-start 8s steps(1,end) 0s 1 normal both}@-webkit-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-moz-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-ms-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-o-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}</style><noscript><style amp-boilerplate>body{-webkit-animation:none;-moz-animation:none;-ms-animation:none;animation:none}</style></noscript>
    <style amp-custom>
      /* any custom style goes here. */
      @media (min-width: 1024px){
        #container,#header{
          width: 600px;
          margin:0 auto;
        }

      }

      body {
        background-color: #eeeeee;
      }

      header,footer{
        background-color: #27a8d8;
        color: white;
        line-height: 32px;
        padding:16px;
        text-align: center;
      }
      header h2{
        margin: 0;
      }

      #date{
        font-size: 0.8em;
        color:#666;
        margin: 1em 0;
        padding:1em 0;
        border-top: 1px dotted #999;
        border-bottom: 1px dotted #999;
      }

      header amp-img{
        display: inline-block;
        margin-right: 1em;
        vertical-align: top;
      }

      header a,footer a{
        color: #fff;
        text-decoration: none;
        
      }

      header #back{
        float: left;
        font-size: 2em;
      }

      #container{
        padding: 16px;
        background-color: white;
      }

      #categories, #tags{
        color:#666;
        font-size: 0.9em;
      }
      #socialshare{
        margin:1.5em 0;
        text-align: center;
      }
      .cover-image{
        margin:1em -16px;
      }

      amp-img.grey-placeholder {
        background-color: grey;
      }

      article{
        margin: 1em 0;
      }
    </style>
    <script async src="https://cdn.ampproject.org/v0.js"></script>
    {{#if is_audio}}
    <script async custom-element="amp-audio" src="https://cdn.ampproject.org/v0/amp-audio-0.1.js"></script>
    {{/if}}
    {{#if is_video}}
    <script async custom-element="amp-youtube" src="https://cdn.ampproject.org/v0/amp-youtube-0.1.js"></script>
    {{/if}}
    <script async custom-element="amp-social-share" src="https://cdn.ampproject.org/v0/amp-social-share-0.1.js"></script>
    <script async custom-element="amp-install-serviceworker" src="https://cdn.ampproject.org/v0/amp-install-serviceworker-0.1.js"></script>
    <script async custom-element="amp-analytics" src="https://cdn.ampproject.org/v0/amp-analytics-0.1.js"></script>
  </head>
  <body>
    <header>
      <a id="back" href="https://shuvayatra.org">&#8592;</a>
      <h2><a href="https://shuvayatra.org"><amp-img src="//storage.googleapis.com/shuvayatra-assets/nav_logo.png" width="32" height="32" alt="शुभयात्रा"></amp-img>शुभयात्रा</a></h2>
    </header>
    <div id="container">
      <h1>{{title}}</h1>
      <div id="date">{{formatDate published day="numeric" month="numeric" year="numeric"}}</div>
      
      {{#if is_article}}
        {{> article}}
      {{/if}}
      {{#if is_audio}}
        {{> audio}}
      {{/if}}
      {{#if is_video}}
        {{> video}}
      {{/if}}

      <div id="tags">
      {{#each tags}}
        <span>{{this}}</span>
      {{/each}}
    </div>

    <div id="socialshare">
        <amp-social-share type="twitter" data-param-url="{{amp_url}}"></amp-social-share>
        <amp-social-share type="facebook" data-param-app_id="552404564965262" data-param-href="{{amp_url}}"></amp-social-share>
        <amp-social-share type="gplus" data-param-url="{{amp_url}}"></amp-social-share>
        <amp-social-share type="whatsapp"
            data-share-endpoint="whatsapp://send"
            data-param-text="Check out this article: {{title}} - {{amp_url}}">
        </amp-social-share>
      </div>
      
  </div>
  <footer>
    &copy; 2017 <a href="https://shuvayatra.org">Shuvayatra</a> 
  </footer>
  <amp-analytics type="googleanalytics">
    <script type="application/json">
    {
      "vars": {
        "account": "UA-77878844-4"
      },
      "triggers": {
        "trackPageview": {
          "on": "visible",
          "request": "pageview"
        }
      }
    }
    </script>
  </amp-analytics>
  <amp-install-serviceworker src="/service-worker.js"
      data-iframe-src="https://shuvayatra.org/images/nav_logo.png"
      layout="nodisplay">
    </amp-install-serviceworker>
  </body>
</html>
